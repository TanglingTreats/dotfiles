{
  "eslint.autoFixOnSave": true,
  "tsserver.formatOnType": true,
  "prettier.tabWidth": 2,
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "javascript",
    "json",
    "css"
  ],
  "languageserver": {
    "csharp-ls": {
      "command": "csharp-ls",
      "filetypes": ["cs"],
      "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
    }
  }
}
