# Shorcuts
function school() {
  # Set school directory
  sch_dir="$HOME/Documents/OneDrive-School/SIT"

  # Check input parameter
  if [ $# -eq 0 ]
  then
    cd $sch_dir
  else
    year="Y$1"
    tri="Tri$2"
    cd "$sch_dir/$year-$tri"
  fi
}

function change_brightness() {
  brightness=$1

  xrandr --output HDMI-A-0 --brightness $brightness
}

